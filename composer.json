{
    "name": "twodee/phypes",
    "type": "library",
    "homepage": "https://github.com/2dsharp/Phypes",
    "license": "GPL-2.0-only",
    "description": "Validation components for commonly used data with value objects.",
    "keywords": ["validation", "forms", "data", "value objects"],

    "authors": [
        {
        "name": "Dedipyaman Das",
        "email": "2d@twodee.me",
        "role": "Developer"
        }
    ],

    "autoload": {
      "psr-4": { "Phypes\\": "src/" }
    },

    "autoload-dev": {
      "psr-4": {
        "Phypes\\UnitTest\\" : "tests/UnitTests/"
      }
    },
    "require": {
        "php": ">=7.2",
        "ext-pdo": "*",
        "psr/log": "1.*"
    },
    "require-dev": {
        "php": ">=7.2",
        "ext-pdo_sqlite": "*",
        "phpunit/phpunit": "^7",
        "mockery/mockery": "^1.1"
    },

    "config": {
        "platform": {
            "php": "7.2.9"
        },
        "platform-dev": {
            "php": "7.2.9"
        }
    }
}
